{
        "version": "0.2.0",
        "configurations": [
            {
                "name": "(gdb) Launch",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceRoot}/src/makefont",
                "args": [ "${workspaceRoot}/src/code_table.txt", 
                    "${workspaceRoot}/src/vitafont2bit.fnt", 
                    "${workspaceRoot}/src/vitafont2bit.fnt.new"],
                "stopAtEntry": false,
                "cwd": "${workspaceRoot}/src",
                "environment": [],
                "externalConsole": true,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        ]
    }